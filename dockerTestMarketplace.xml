<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="docker">
    <listeners>
        <listener class-name="resources.ExtentReporterNG"/>
        <listener class-name="resources.Listeners"/>
    </listeners>

    <!--        REGISTER AND VERIFY USER TEST-->
    <test thread-count="4" name="Marketplace Registration">
        <classes>
            <class name="dockerTests.SetupDockerGrid"/>
            <class name="marketplaceTests.user.MarketplaceRegister"/>
        </classes>
    </test>
    <test thread-count="4" name="user.Verify Marketplace User">
        <classes>
            <class name="dockerTests.SetupDockerGrid"/>
            <class name="marketplaceTests.user.VerifyMarketplaceUser"/>
        </classes>
    </test>

    <!--    SEARCH DEPARTMENT TEST-->
    <test thread-count="4" name="Search Department after perimeter near Center">
        <classes>
            <class name="dockerTests.SetupDockerGrid"/>
            <class name="marketplaceTests.searchDepartmentRequest.SearchDepartmentAfterPerimeterNearCenter"/>
        </classes>
    </test>
    <test thread-count="4" name="Search Department after perimeter outside center">
        <classes>
            <class name="dockerTests.SetupDockerGrid"/>
            <class name="marketplaceTests.searchDepartmentRequest.SearchDepartmentAfterPerimeterOutsideCenter"/>
        </classes>
    </test>

    <!--    BOOKMARKS TEST-->
    <!--    TODO-->
    <test thread-count="4" name="Bookmark Departments">
        <classes>
            <class name="dockerTests.SetupDockerGrid"/>
            <class name="marketplaceTests.bookmarkAndCompareDepartmentTests.MyFavoriteMarketplaceDepartments"/>
        </classes>
    </test>
    <test thread-count="4" name="Compare Departments">
        <classes>
            <class name="dockerTests.SetupDockerGrid"/>
            <class name="marketplaceTests.bookmarkAndCompareDepartmentTests.CompareMarketplaceDepartments"/>
        </classes>
    </test>

    <!--    ASK FOR MEETING-->
    <test thread-count="4" name="Ask for Meeting as User">
        <classes>
            <class name="dockerTests.SetupDockerGrid"/>
            <class name="marketplaceTests.meetingRequest.AskForMeeting"/>
        </classes>
    </test>
    <test thread-count="4" name="Accept Meeting as Provider">
        <classes>
            <class name="dockerTests.SetupDockerGrid"/>
            <class name="departments.AcceptMeeting"/>
        </classes>
    </test>
    <test thread-count="4" name="Accept Meeting as User">
        <classes>
            <class name="dockerTests.SetupDockerGrid"/>
            <class name="marketplaceTests.meetingRequest.AcceptMeetingAsMarketplaceUser"/>
        </classes>
    </test>
    <test thread-count="4" name="Answer Meeting Req as User">
        <classes>
            <class name="dockerTests.SetupDockerGrid"/>
            <class name="marketplaceTests.meetingRequest.AnswerMeetingAsMarketplaceUser"/>
        </classes>
    </test>
    <test thread-count="4" name="Discard Meeting as User">
        <classes>
            <class name="dockerTests.SetupDockerGrid"/>
            <class name="marketplaceTests.meetingRequest.DiscardMeetingAsMarketplaceUser"/>
        </classes>
    </test>
    <test thread-count="4" name="Discard Meeting as Provider">
        <classes>
            <class name="dockerTests.SetupDockerGrid"/>
            <class name="departments.DeleteMeeting"/>
        </classes>
    </test>
    <test thread-count="4" name="Delete Meeting as User">
        <classes>
            <class name="dockerTests.SetupDockerGrid"/>
            <class name="marketplaceTests.meetingRequest.DeleteMeetingAsMarketplaceUser"/>
        </classes>
    </test>

    <!--    CHECK IF MEETING REQ WOULD BE ALSO DELETE IF USER IS DELETED AFTER REQ-->
    <test thread-count="4" name="Ask second time for Meeting as User">
        <classes>
            <class name="dockerTests.SetupDockerGrid"/>
            <class name="marketplaceTests.meetingRequest.AskForMeeting"/>
        </classes>
    </test>

    <!--    DELETE USER-->
    <test thread-count="4" name="Delete Marketplace User">
        <classes>
            <class name="dockerTests.SetupDockerGrid"/>
            <class name="marketplaceTests.user.DeleteMarketplaceUser"/>
        </classes>
    </test>
    <test thread-count="4" name="Check if deleted Meeting Request are available">
        <classes>
            <class name="dockerTests.SetupDockerGrid"/>
            <class name="departments.CheckIfRequestAreDeleted"/>
        </classes>
    </test>

</suite>