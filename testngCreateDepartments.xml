<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="TestNgCreateDepartments">
    <listeners>
        <listener class-name="resources.ExtentReporterNG"/>
        <listener class-name="resources.Listeners"/>
    </listeners>

    <test name="Registration Test">
        <classes>
            <class name="user.MulRegister"/>
        </classes>
    </test>

    <test name="user.Verify Test">
        <classes>
            <class name="user.Verify"/>
        </classes>
    </test>

    <test name="Creating an ambulant Organisation">
        <classes>
            <class name="departments.CreateAmbulantOrganisation"/>
        </classes>
    </test>

    <test name="Creating a stationary Organisation">
        <classes>
            <class name="departments.CreateStationaryOrganisation"/>
        </classes>
    </test>

    <test name="Creating a day-night-care Organisation">
        <classes>
            <class name="departments.CreateDayNightCareOrganisation"/>
        </classes>
    </test>

    <test name="Creating a Fair House Offer Organisation">
        <classes>
            <class name="departments.CreateFairHouseOffer"/>
        </classes>
    </test>

    <test name="Make public">
        <classes>
            <class name="departments.ToggleOrganisation"/>
        </classes>
    </test>

    <test name="Delete Placement">
        <classes>
            <class name="placements.DeletePlacement"/>
        </classes>
    </test>

    <test name="Delete User">
        <classes>
            <class name="user.DeleteUser"/>
        </classes>
    </test>
</suite>